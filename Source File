void show()

{
	system("cls");
	if(total==0)

	{

		cout<<"----------No data is entered----------"<<endl;

	}

	else{
		
		cout<<endl<<"---------------------------------------------------------------------------------------------------------------------------------------------------"<<endl<<endl;
	
			string stdname;	
			string stdrollno;
			string stdcontact;
			string stdcourse;
			string stdclass;
			cout<<endl<<setw(6)<<"---Name---"<<setw(32)<<"---Roll no---"<<setw(32)<<"---Course---"<<setw(32)<<"---Class---"<<setw(32)<<"---Contact---"<<endl<<endl<<endl;		
			ifstream filein;
			filein.open("data.txt",ios::in);
			while(!filein.eof())
			{
				filein >> stdname;
				filein >> stdrollno;
				filein >> stdcourse;
				filein >> stdclass;
				filein >> stdcontact;
				filein.ignore(2);
				
				
				cout<<setw(6)<<stdname<<setw(32)<<stdrollno<<setw(32)<<stdcourse<<setw(32)<<stdclass<<setw(32)<<stdcontact<<endl<<endl;

					
				
			}filein.close();

}
}


void search()

{
		system("cls");

	if(total==0)

	{

		cout<<"No data is entered"<<endl;

	}

	else{

	string rollno, contact;
	int chs;
	
	cout<<"Press 1 To Seraching By Roll no."<<endl<<endl;
	cout<<"Press 2 To Searching By Contact."<<endl;
	cin>>chs;
		switch(chs)
		{
			case 1:{
		
			cout<<"Enter the roll no of student"<<endl<<endl;
		
			cin>>rollno;
			cout<<endl<<"--------------------------------------------------------------------------------------------------------------------------------------------------------------------------"<<endl<<endl;

		
			string stdname;	
			string stdrollno;
			string stdcontact;
			string stdcourse;
			string stdclass;
			cout<<endl<<setw(6)<<"---Name---"<<setw(32)<<"---Roll no---"<<setw(32)<<"---Course---"<<setw(32)<<"---Class---"<<setw(32)<<"---Contact---"<<endl<<endl<<endl;
			ifstream filein;
			filein.open("data.txt",ios::in);
			while(!filein.eof())
			{
				filein >> stdname;
				filein >> stdrollno;
				filein >> stdcourse;
				filein >> stdclass;
				filein >> stdcontact;
				filein.ignore(2);
			
				
				if(rollno==stdrollno)

					{

						cout<<setw(6)<<stdname<<setw(32)<<stdrollno<<setw(32)<<stdcourse<<setw(32)<<stdclass<<setw(32)<<stdcontact<<endl<<endl;

					}
				
				}filein.close();	
			break;
			
				}
			case 2:{
				
			
				cout<<"Enter the contact number of student"<<endl<<endl;
				cin>>contact;
				cout<<endl<<"--------------------------------------------------------------------------------------------------------------------------------------------------------------------------"<<endl<<endl;
				
			string stdname;	
			string stdrollno;
			string stdcontact;
			string stdcourse;
			string stdclass;
			cout<<endl<<setw(6)<<"---Name---"<<setw(32)<<"---Roll no---"<<setw(32)<<"---Course---"<<setw(32)<<"---Class---"<<setw(32)<<"---Contact---"<<endl<<endl<<endl;
			ifstream filein;
			filein.open("data.txt",ios::in);
			while(!filein.eof())
			{
				filein >> stdname;
				filein >> stdrollno;
				filein >> stdcourse;
				filein >> stdclass;
				filein >> stdcontact;
				filein.ignore(2);
			
				
				if(contact==stdcontact)

					{

						cout<<setw(6)<<stdname<<setw(32)<<stdrollno<<setw(32)<<stdcourse<<setw(32)<<stdclass<<setw(32)<<stdcontact<<endl<<endl;

					}
				
				}filein.close();	
			break;
			
				}
			
				
				default:
				cout<<"xxxxInvalid InputXXXX"<<endl;	
				
		
		}
			

			}

}

void update()

{
		system("cls");

	if(total==0)

	{

		cout<<"No data is entered"<<endl;

	}

	else{

		string rollno;
				cout<<"------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"<<endl;
				cout<<"Enter the roll no of student which you want to update"<<endl;

				cin>>rollno;
				
				cout<<endl<<"\nPrevious data:"<<endl<<endl;
				cout<<endl<<"--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"<<endl<<endl;
				
				
				
	
			string stdname;	
			string stdrollno;
			string stdcontact;
			string stdcourse;
			string stdclass;
			cout<<endl<<setw(6)<<"---Name---"<<setw(32)<<"---Roll no---"<<setw(32)<<"---Course---"<<setw(32)<<"---Class---"<<setw(32)<<"---Contact---"<<endl<<endl<<endl;
			ifstream filein;
			filein.open("data.txt",ios::in);
			while(!filein.eof())
			{
				filein >> stdname;
				filein >> stdrollno;
				filein >> stdcourse;
				filein >> stdclass;
				filein >> stdcontact;
				filein.ignore(2);
				
				if(rollno==stdrollno)
				{
				
				
				cout<<setw(6)<<stdname<<setw(32)<<stdrollno<<setw(32)<<stdcourse<<setw(32)<<stdclass<<setw(32)<<stdcontact<<endl<<endl;
				
				}
				
			}filein.close();
				
			ofstream filecreat;
			filecreat.open("data.txt",ios::app);
			if(!filecreat)
			{
				cout<<"File Currupted!";
			}
			else{
			
				cout<<endl<<"--------------------------------------------------------------------------------------------------------------------------------------------------------------------------"<<endl<<endl;
	    	    cout<<"\nEnter new data"<<endl<<endl;
	    		cout<<"=================================================================================================================================================================================="<<endl<<endl;
				

				cout<<"Enter name: "<<endl;

				cin>>arr1[20];

				cout<<"Enter Roll no: "<<endl;

				cin>>arr2[20];

				cout<<"Enter course: "<<endl;

				cin>>arr3[20];

				cout<<"Enter class: "<<endl;

				cin>>arr4[20];

				cout<<"Enter contact; "<<endl;

				cin>>arr5[20];
				
				
				filecreat<<arr1[20]<<" ";
				filecreat<<arr2[20]<<" ";
				filecreat<<arr3[20]<<" ";
				filecreat<<arr4[20]<<" ";
				filecreat<<arr5[20]<<" ";
				filecreat<<"\n";
			
			filecreat.close();

			}

		}
}


void deleterecord()

{
		system("cls");

	if(total==0)

	{

		cout<<"No data is entered :("<<endl;

	}

	else{

		int a;

	        	cout<<"Press 1 to delete all record"<<endl;

				cout<<"Press 2 to delete specific record"<<endl;

				cin>>a;

				if(a==1)

				{

					total=0;

					cout<<"All record is deleted..!!"<<endl;

				}

				else if(a==2)

				{

				string rollno;
				cout<<"------------------------------------------------------"<<endl;

				cout<<"Enter the roll no of student which you wanted to delete"<<endl;
				cout<<"------------------------------------------------------"<<endl;


				cin>>rollno;

				for(int i=0;i<total;i++)

				{

					if(rollno==arr2[i])

					{

						for(int j=i;j<total;j++)

						{

						arr1[j]=arr1[j+1];

						arr2[j]=arr2[j+1];

					    arr3[j]=arr3[j+1];

						arr4[j]=arr4[j+1];

						arr5[j]=arr5[j+1];

				     	}

					total--;
					
					
					cout<<"Your required record is deleted"<<endl;

					}

				}

				}

				 

			

			else 

			{

				cout<<"Invalid input";

			}

}

}

