				filecreat<<arr4[i]<<" ";
				filecreat<<arr5[i]<<" ";
				filecreat<<"\n";
			
			
		
				

		}filecreat.close();
		}
			system("cls");

	    	}
	    	
	    	
	    

	    	else
			{
					
			ofstream filecreat;
